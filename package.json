{
  "name": "japanese-dsl-e2e-test-runner",
  "version": "0.1.0",
  "description": "Minimal Japanese DSL E2E testing system using Playwright and BullMQ",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file=.env dist/server.js",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No automated tests configured\"",
    "playwright:install": "npx playwright install --with-deps"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bullmq": "^4.12.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "js-yaml": "^4.1.0",
    "mime": "^4.0.1",
    "pino": "^8.17.1",
    "playwright": "^1.42.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.4.3",
    "tsx": "^4.7.1"
  }
}
